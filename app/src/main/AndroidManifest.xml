<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="hua.music.huamusic">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".pages.local.LocalActivity"
            android:exported="false"/>
        <activity android:name=".pages.recent.RecentActivity"/>
        <activity android:name=".pages.down.DownActivity"/>
        <activity android:name=".pages.local.ScanActivity"/>
        <activity android:name=".pages.activitys.PlayActivity"/>

        <service android:name=".service.MusicPlayerService"/>

    </application>

</manifest>