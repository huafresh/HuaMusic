<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hua.music.huamusic.MainActivity">

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_theme"/>

    <View
        android:id="@+id/bac_left_menu"
        android:layout_width="@dimen/click_width"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/view_header"
        app:layout_constraintBottom_toBottomOf="@id/view_header"/>

    <View
        android:id="@+id/bac_search"
        android:layout_width="@dimen/click_width"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/view_header"
        app:layout_constraintBottom_toBottomOf="@id/view_header"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bac_left_menu"
        app:layout_constraintRight_toRightOf="@id/bac_left_menu"
        app:layout_constraintTop_toTopOf="@id/bac_left_menu"
        app:layout_constraintBottom_toBottomOf="@id/bac_left_menu"
        android:src="@drawable/left_menu_button"
        android:background="@null"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="@id/bac_search"
        app:layout_constraintRight_toRightOf="@id/bac_search"
        app:layout_constraintTop_toTopOf="@id/bac_search"
        app:layout_constraintBottom_toBottomOf="@id/bac_search"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/view_header"
        app:layout_constraintRight_toRightOf="@id/view_header"
        app:layout_constraintTop_toTopOf="@id/view_header"
        app:layout_constraintBottom_toBottomOf="@id/view_header"/>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_header"
        app:layout_constraintBottom_toTopOf="@+id/fl_music_controller"/>

    <FrameLayout
        android:id="@+id/fl_music_controller"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>
