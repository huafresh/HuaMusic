<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    tools:context="hua.music.huamusic.MainActivity"
    android:background="@color/color_theme">

    <View
        android:id="@+id/bac_left_menu"
        android:layout_width="@dimen/click_width"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="patent"
        app:layout_constraintBottom_toBottomOf="patent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bac_left_menu"
        app:layout_constraintRight_toRightOf="@id/bac_left_menu"
        app:layout_constraintTop_toTopOf="@id/bac_left_menu"
        app:layout_constraintBottom_toBottomOf="@id/bac_left_menu"
        android:src="@drawable/left_menu_button"
        android:background="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bac_left_menu"/>

    <View
        android:id="@+id/bac_search"
        android:layout_width="@dimen/click_width"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="patent"
        app:layout_constraintBottom_toBottomOf="patent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="@id/bac_search"
        app:layout_constraintRight_toRightOf="@id/bac_search"
        app:layout_constraintTop_toTopOf="@id/bac_search"
        app:layout_constraintBottom_toBottomOf="@id/bac_search"/>



</android.support.constraint.ConstraintLayout>
